# Portfolio Environment Variables
# Copy this file to .env and modify values as needed

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# Server Configuration
HOST=127.0.0.1
PORT=5000

# Database Configuration (optional)
DATABASE_URL=sqlite:///portfolio.db

# Security Configuration (optional)
SECURITY_PASSWORD_SALT=your-password-salt-here

# Analytics Configuration (optional)
GOOGLE_ANALYTICS_ID=your-ga-id-here

# Deployment Platform Environment Variables
# These are set automatically by most platforms
# RAILWAY_PUBLIC_DOMAIN=your-app.railway.app
# RENDER_EXTERNAL_URL=https://your-app.onrender.com
# VERCEL_URL=your-app.vercel.app
PORT=5000

# Database Configuration
DATABASE_URL=portfolio.db

# Security Settings
MAX_QUERY_LENGTH=1000
MAX_RESULTS=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=portfolio.log

# Production Settings (for deployment)
# HOST=0.0.0.0
# PORT=5000
# FLASK_ENV=production
# FLASK_DEBUG=False
# LOG_LEVEL=WARNING
