{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "error",
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": "error",
    "curly": "error",
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error",
    "no-script-url": "error",
    "no-alert": "warn",
    "no-confirm": "warn",
    "no-prompt": "warn",
    "complexity": ["warn", 10],
    "max-depth": ["warn", 4],
    "max-lines-per-function": ["warn", 50],
    "max-params": ["warn", 4],
    "no-magic-numbers": ["warn", { "ignore": [0, 1, -1, 2] }],
    "prefer-arrow-callback": "error",
    "arrow-spacing": "error",
    "no-duplicate-imports": "error",
    "no-useless-return": "error",
    "no-unreachable": "error",
    "no-dead-code": "error"
  },
  "globals": {
    "currentLang": "readonly",
    "languageSelected": "readonly",
    "queryBlocks": "writable",
    "isBuilderMode": "writable",
    "draggedFromPool": "writable",
    "draggedIndex": "writable",
    "currentTutorialLevel": "writable",
    "builderTexts": "readonly",
    "cardTexts": "readonly",
    "tutorialContents": "readonly",
    "cueData": "readonly"
  }
}
