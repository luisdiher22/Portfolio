{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": "off",
    "no-alert": "off",
    "complexity": "off",
    "max-depth": "off",
    "max-lines-per-function": "off",
    "max-params": "off",
    "no-magic-numbers": "off",
    "semi": "off",
    "space-before-function-paren": "off",
    "comma-dangle": "off",
    "indent": "off",
    "quotes": "off",
    "no-unused-expressions": "off",
    "brace-style": "off",
    "no-trailing-spaces": "off"
  },
  "globals": {
    "currentLang": "writable",
    "languageSelected": "writable",
    "queryBlocks": "writable",
    "isBuilderMode": "writable",
    "draggedFromPool": "writable",
    "draggedIndex": "writable",
    "currentTutorialLevel": "writable",
    "builderTexts": "readonly",
    "cardTexts": "readonly",
    "tutorialContents": "readonly",
    "cueData": "readonly",
    "performanceUtils": "readonly",
    "lazyLoadObserver": "readonly",
    "safeFetch": "readonly",
    "debounce": "readonly",
    "displayResults": "readonly",
    "transformToSplitLayout": "readonly",
    "resetToOriginalLayout": "readonly",
    "resetCardsPosition": "readonly",
    "revealAnswer": "readonly"
  }
}
